# keyconfigs for yabai


# open terminal
cmd + alt - return: /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~

# close all open terminals
cmd + alt - t : killall kitty


# restart yabai
cmd + alt - v : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# moving desktops
alt - z : yabai -m space --focus prev
alt - x : yabai -m space --focus next

# send window to desktop and follow focus
cmd + alt + shift - 1 : yabai -m window --space  1; yabai -m space --focus 1
cmd + alt + shift - 2 : yabai -m window --space  2; yabai -m space --focus 2
cmd + alt + shift - 3 : yabai -m window --space  3; yabai -m space --focus 3
cmd + alt + shift - 4 : yabai -m window --space  4; yabai -m space --focus 4

# Navigation
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Moving windows
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# swap window
shift + alt - left : yabai -m window --swap west
shift + alt - down : yabai -m window --swap south
shift + alt - up : yabai -m window --swap north
shift + alt - right : yabai -m window --swap east

# create blank space?
alt - m : yabai -m space --create
alt - r : yabai -m space --rotate 90

# float window
cmd + alt - u : yabai -m window --toggle float

# toggle desktop offset
cmd + alt - o : yabai -m space --toggle padding; yabai -m space --toggle gap

# toggle window fullscreen zoom
cmd + alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
cmd + alt + shift - f : yabai -m window --toggle native-fullscreen

# toggle topmost (keep above other windows)
alt - o : yabai -m window --toggle topmost
